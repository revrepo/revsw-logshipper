{
  "log": {
    "transports": {
      "Console": {
        "level": "warn",
        "colorize": true,
        "prettyPrint": true,
        "humanReadableUnhandledException": true,
        "showLevel": true
      },
      "File": {
        "filename": "./log/revsw-logshipper.log",
        "level": "info",
        "prettyPrint": true
      }
    }
  },
  "logshipper_db": {
    "connection": "mongodb://localhost:27017/logshipper",
    "domain_log_collection": "DomainsLog",
    "app_log_collection": "AppsLog"
  },
  "revportal_db": {
    "connection": "mongodb://IAD02-CMDB01.REVSW.NET:27017/revportal?replicaSet=CMDB-rs0",
    "job_collection": "LogShippingJob",
    "app_collection": "App",
    "domain_collection": "DomainConfig"
  },
  "uploads_dir": "/opt/revsw-logshipper/uploads",
  "service": {
    "key_path": "./config/ssl_certs/server.key",
    "cert_path": "./config/ssl_certs/server.crt"
  },

  "notify_admin_by_email_on_logshipper_job_failures": "ops@revsw.com",
  "notify_developers_by_email_about_bad_implementation": "eng@revsw.com",
  "notify_developers_by_email_about_uncaught_exceptions": "eng@revsw.com"
}
