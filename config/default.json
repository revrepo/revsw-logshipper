{
  "log": {
    "transports": {
      "Console": {
        "level": "info",
        "colorize": true,
        "prettyPrint": true,
        "humanReadableUnhandledException": true,
        "showLevel": true
      },
      "File": {
        "filename": "./log/revsw-logshipper.log",
        "level": "debug",
        "prettyPrint": true
      }
    }
  },
  "run_logshipping_jobs": true,
  "service": {
    "host": "0.0.0.0",
    "http_port": 8000,
    "https_port": 8443,
    "key_path": "./config/dev_ssl_certs/server.key",
    "cert_path": "./config/dev_ssl_certs/server.crt",
    "logshipper_db": {
      "connection": "mongodb://localhost:27017/logshipper",
      "domain_log_collection": "DomainsLog",
      "app_log_collection": "AppsLog"
    },
    "revportal_db": {
      "connection": "mongodb://TESTSJC20-CMDB01.REVSW.NET:27017/revportal?replicaSet=CMDB-rs0",
      "job_collection": "LogShippingJob",
      "app_collection": "App",
      "domain_collection": "DomainConfig"
    },
    "logs_shipping_span": 300000
  }
}
